<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.facialrecognition.main">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity" android:screenOrientation="portrait" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait" android:configChanges="orientation"/>
        <activity android:name=".GuideActivity" android:screenOrientation="portrait" android:configChanges="orientation"/>
        <activity android:name=".MainMenuActivity" android:screenOrientation="portrait" android:configChanges="orientation"/>
        <activity android:name=".ChoosePhotoActivity" android:screenOrientation="portrait" android:configChanges="orientation"/>
        <activity android:name=".AstarteMainActivity" android:screenOrientation="portrait" android:configChanges="orientation"/>
    </application>

</manifest>
